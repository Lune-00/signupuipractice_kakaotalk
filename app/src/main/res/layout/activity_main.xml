<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    android:gravity="center|top"
    android:background="#FAE100"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="10dp"
            android:layout_height="50dp"/>

        <ImageView
            android:layout_width="240dp"
            android:layout_height="140dp"
            android:src="@drawable/img1"/>

    </LinearLayout>

    <EditText
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:background="#ffffff"
        android:layout_marginTop="50dp"
        android:textSize="17dp"
        android:textColorHint="#D6D5CC"
        android:hint="  카카오계정 (이메일)"/>

    <EditText
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:background="#ffffff"
        android:textSize="17dp"
        android:textColorHint="#D6D5CC"
        android:hint="  비밀번호"/>

    <Button
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginTop="6dp"
        android:backgroundTint="#715c5e"
        android:text="로그인"
        android:textColor="#837274"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:buttonTint="#a49700"
        android:text="잠금모드로 자동로그인"
        android:textColor="#a49700"
        android:textSize="13dp"
        android:layout_marginRight="64dp"/>


</LinearLayout>